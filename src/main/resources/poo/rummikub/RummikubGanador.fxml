<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="404.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="poo.rummikub.RummikubGanador">
   <Label style="-fx-font-size: 18; -fx-font-weight: bold;" text="Puntajes Finales" />

   <TableView prefWidth="600.0">
      <columns>
         <TableColumn text="No. Partida" />
         <TableColumn text="P1" />
         <TableColumn text="P2" />
         <TableColumn text="P3" />
         <TableColumn text="P4" />
      </columns>
   </TableView>

   <!-- Add 10 rows of data to the TableView for player scores -->

   <Separator prefHeight="10.0" prefWidth="600.0" />

   <Label style="-fx-font-size: 18; -fx-font-weight: bold;" text="El ganador es: P1" />

   <HBox alignment="CENTER" spacing="100.0">
      <Button fx:id="botonJugarOtraVez" onAction="#jugarOtraVez" text="Volver a jugar" textAlignment="CENTER" />
      <Button text="Terminar Juego" textAlignment="CENTER" />
   </HBox>

</VBox>
